<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Pocket Money</title>
    <link rel="stylesheet" href="/css/output.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">
  </head>
  <body>
    <div class="flex justify-center items-center min-h-screen">
      <div class="app text-center">
        <h1 class="text-5xl mb-8">Pocket Money</h1>

        <section class="purchases">
          <ul class="flex flex-col">
            <% let totalPrice = 0; %> <% purchases.forEach( el => { %>
            <li class="purchase-item flex items-center mb-1 input input-bordered pr-0" data-id="<%=el._id%>">
              <span class="purchase w-4/5 text-left"><%= el.purchase %></span>
              <span class="price w-1/5 text-right mr-8">$<%= el.price %></span>
              <span class="del h-4 btn btn-error ml-auto">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="currentColor"
                  class="w-6 h-6"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M9.75 9.75l4.5 4.5m0-4.5l-4.5 4.5M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                  />
                </svg>
              </span>
            </li>
            <% totalPrice += el.price; %> <% }) %>
          </ul>
        </section>
        <div class="divider"></div> 
        <section class="purchases-total">
          <ul class="flex flex-col">
            <li class="purchase-total flex items-center mb-1 input input-bordered pr-0">
              <span class="total-text w-4/5 text-left"><strong>Total</strong></span>
              <span class="total-calculation w-1/5 text-right mr-8"
                ><strong>$<%= totalPrice %></strong></span
              >
              <button id="deleteAll" class="del btn btn-error h-4 ml-auto bg-red-500 border-red-500">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="currentColor"
                  class="w-6 h-6 delete-all-btn"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M9.75 9.75l4.5 4.5m0-4.5l-4.5 4.5M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                  />
                </svg></button>
            </li>
          </ul>
        </section>

        <section class="remaining-total">
          <span class="remaining-text">Total remaining:</span>
          <% const remainingAmount = userGoal - totalPrice; %>
          <span class="remaining-number <%= remainingAmount >= 0 ? 'text-green-300' : 'text-red-500' %>"
            >$<%= remainingAmount.toFixed(2) %></span
          >
        </section>
        <div class="divider"></div>   
        <form action="/purchases/createPurchase" method="POST">
          <input type="text" placeholder="Enter Purchase" name="purchaseItem" class="input input-bordered w-full" />
          <input
            type="number"
            step="0.01"
            placeholder="Price (e.g. 4.95)"
            name="price"
            class="input input-bordered w-full" 
          /><br>
          <button type="submit" class="btn w-full btn-success mb-8"/>Add purchase</button>
        </form>

        <form action="/purchases/editGoal" method="POST">
          <input
            type="number"
            step="0.01"
            name="newGoal"
            placeholder="Current goal: <%= userGoal %>"
            class="input input-bordered w-full"
          /><br>
          <button type="submit" class="btn w-full btn-warning mb-8">Edit Goal</button>
        </form>
        <a href="/logout" class="btn btn-active btn-ghost">Logout</a>
      </div>
    </div>
    <footer class="footer footer-center p-4 bg-base-300 text-base-content">
      <aside>
        <p>Copyright Â© 2023 - All right reserved by David Wiese</p>
      </aside>
    </footer>
    <script src="js/main.js"></script>
  </body>
</html>
