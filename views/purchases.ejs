<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Pocket Money</title>
    <link rel="stylesheet" href="/css/output.css" />
  </head>
  <body>
    <div class="bg-violet-950 flex items-center justify-center">
      <div class="app">
        <h1 class="text-2xl text-yellow-500 my-4">Pocket Money</h1>

        <section class="purchases">
          <ul class="flex flex-col">
            <% let totalPrice = 0; %> <% purchases.forEach( el => { %>
            <li
              class="purchase-item flex items-center mb-3"
              data-id="<%=el._id%>"
            >
              <span class="purchase text-gray-200 w-4/5"
                ><%= el.purchase %></span
              >
              <span class="price text-gray-200 w-1/5 text-right mr-4"
                ><%= el.price %></span
              >
              <span
                class="del text-gray-200 ml-auto cursor-pointer flex-1 text-right"
              >
                Delete
              </span>
            </li>
            <% totalPrice += el.price; %> <% }) %>
          </ul>
        </section>
        <section class="purchases-total">
          <ul class="flex flex-col">
            <li class="purchase-total flex items-center mb-3">
              <span class="total-text text-gray-200 w-4/5"
                ><strong>Total</strong></span
              >
              <span
                class="total-calculation text-gray-200 w-1/5 text-right mr-4"
                ><strong><%= totalPrice %></strong></span
              >
              <button
                id="deleteAll"
                class="text-red-500 ml-auto cursor-pointer flex-1"
              >
                Delete All
              </button>
            </li>
          </ul>
        </section>

        <section class="remaining-total">
          <span class="remaining-text">Total remaining:</span>
          <% const remainingAmount = userGoal - totalPrice; %>
          <span class="remaining-number"
            ><%= remainingAmount.toFixed(2) %></span
          >
        </section>

        <form action="/purchases/createPurchase" method="POST">
          <input type="text" placeholder="Enter Purchase" name="purchaseItem" />
          <input
            type="number"
            step="0.01"
            placeholder="Price (e.g. 4.95)"
            name="price"
          />
          <input type="submit" />
        </form>

        <form action="/purchases/editGoal" method="POST">
          <input
            type="number"
            step="0.01"
            name="newGoal"
            placeholder="<%= userGoal %>"
          />
          <button type="submit">Edit Goal</button>
        </form>
        <a href="/logout">Logout</a>
      </div>
    </div>
    <script src="js/main.js"></script>
  </body>
</html>
