<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Pocket Money</title>
    <link rel="stylesheet" href="css/style.css" />
  </head>
  <body>
    <h1>Pocket Money</h1>

    <section class="purchases">
      <ul>
        <% purchases.forEach( el => { %>
        <li class="purchaseItem" data-id="<%=el._id%>">
          <span class="purchase"><%= el.purchase %></span>
          <span class="price"><%= el.price %></span>
          <span class="del"> Delete </span>
        </li>
        <% }) %>
      </ul>
    </section>
    <section class="total">
      <ul>
        <li class="purchaseTotal">
          <span class="totalText"><strong>Total</strong></span>
          <span class="totalCalculation"><strong>XXX</strong></span>
        </li>
      </ul>
    </section>

    <form action="/purchases/createPurchase" method="POST">
      <input type="text" placeholder="Enter Purchase" name="purchaseItem" />
      <input type="number" step="0.01" placeholder="Price" name="price" />
      <input type="submit" />
    </form>

    <a href="/logout">Logout</a>

    <script src="js/main.js"></script>
  </body>
</html>
